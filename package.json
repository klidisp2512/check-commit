{
  "name": "check-commit",
  "version": "1.0.0",
  "description": "Command line tools for commit validation with regular expressions suitable for husky",
  "author": "Lukas Taegert",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukastaegert/check-commit.git"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "eslint": "^3.17.0",
    "eslint-config-standard": "^7.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "findup": "^0.1.5",
    "git-repo-info": "^1.4.1",
    "husky": "^0.13.2",
    "ramda": "^0.23.0",
    "ramda-fantasy": "^0.7.0",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.11.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.2.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "refactor",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "bin": {
    "check-commit-branch": "./bin/check-commit-branch.js"
  },
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "semantic-release": "semantic-release pre && yarn publish && semantic-release post",
    "precommit": "yarn lint",
    "commitmsg": "validate-commit-msg",
    "prepush": "yarn test",
    "postmerge": "yarn",
    "postrewrite": "yarn"
  }
}
